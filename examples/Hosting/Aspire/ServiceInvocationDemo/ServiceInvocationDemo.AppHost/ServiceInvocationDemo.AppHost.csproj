<Project Sdk="Microsoft.NET.Sdk">

    <Sdk Name="Aspire.AppHost.Sdk" Version="9.3.1"/>

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <WarningsAsErrors>false</WarningsAsErrors>
        <UserSecretsId>5d18c5e4-5752-4a7d-a461-88e9e4bcbacf</UserSecretsId>
        <ManagePackageVersionsCentrally>false</ManagePackageVersionsCentrally>
        <NoWarn>$(NoWarn);CS8002</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Aspire.Hosting.AppHost" Version="9.4.1" />
        <PackageReference Include="CommunityToolkit.Aspire.Hosting.Dapr" Version="9.7.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\BackendApp\BackendApp.csproj" />
      <ProjectReference Include="..\FrontendApp\FrontendApp.csproj" />
    </ItemGroup>

</Project>
